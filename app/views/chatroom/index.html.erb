<h3 class="ui center aligned icon header">
    <i class="circular olive coffee icon"></i>
    Chatroom
</h3>

<div class="ui center aligned two column grid">
    <div class="twelve wide column">
        
        <div class="ui fluid raised card chatbox">
            <div class="content" id="messages">
                <div class="ui feed" id="message-container">
                    <%= render @messages %>
                </div>   
            </div>
        </div>
        
        <div class="extra content">
            <%= form_for(@message, :html => {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
                <div class="field">
                    <div class="ui fluid icon input">
                        <%= f.text_field :body, placeholder: "Enter a message", autofocus: true %>
                        <%= f.button '<i class="bordered inverted olive edit icon"></i>'.html_safe, id: "message_button" %>
                    </div>
                </div>
            <% end %>
        </div>
        
    </div>   
</div>
