<div class="column">
    <%= form_for(@user, :html => {class: "ui form", role: "form"}) do |f| %>
        <div class="field">
            <%= f.label :username, "Username" %>
            <div class="ui left icon input">
                <%= f.text_field :username, placeholder: "Username" %>
                <i class="coffee icon"></i>
            </div>
        </div>
        
        <div class="field">
            <%= f.label :email, "Email" %>
            <div class="ui left icon input">
                <%= f.email_field :email, placeholder: "Email" %>
                <i class="beer icon"></i>
            </div>
        </div>
        
        <div class="field">
            <%= f.label :password, "Password"%>
            <div class="ui left icon input">
                <%= f.password_field :password, placeholder: "Password" %>
                <i class="lock icon"></i>
            </div>
        </div>
        <%= f.submit(@user.new_record? ? "Sign up" : "Edit account", class: "ui olive submit button") %>
    <% end %>
    
    <% if !@user.new_record? %>
        <div class="margin-top-50">
            <div class="item">
                <i class="home icon"></i>
               <%= link_to "Cancel request and return to home page", root_path %>
            </div>
        </div>
    <% end %>
       
</div>