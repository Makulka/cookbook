<h1 class="ui icon header">
    <i class="circular olive search icon"></i>
   Find a new friend
</h1>

<div class="margin-bottom-50 width-70">
    <%= form_tag search_friends_path, remote: true, method: :get, id: "search" do %>
        <div class="ui fluid action input">
            
            <%= text_field_tag :search_param, params[:search_param], placeholder: "Search for a new friend", autofocus: true %>
        
            <%= button_tag(type: :submit, class: "ui olive button") do %>
                Search
            <% end %>
            
        </div> 
    <% end %>
</div>

<div id="results">
    <%= render "result" %>
</div>