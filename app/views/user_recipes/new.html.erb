<h1>search recipes</h1>

<%= form_tag search_recipes_path, remote: true, method: :get, id: 'search' do %>
    <div class="ui action input">
        
        <%= text_field_tag :search_param, params[:search_param], placeholder: "Search for recipes", autofocus: true %>
    
        <%= button_tag(type: :submit, class: "ui button") do %>
            Search
        <% end %>
        
    </div> 
<% end %>

<div id="results">
    <%= render "result" %>
</div>
    
    